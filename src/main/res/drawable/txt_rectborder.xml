<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置一个黑色边框 -->
    <!-- 指定边框线条的宽度和颜色 -->
    <stroke android:width="3px" android:color="#000000"/>
    <!-- 设置背景色为透明 -->
    <solid android:color="#0000"/>
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/>

</shape>